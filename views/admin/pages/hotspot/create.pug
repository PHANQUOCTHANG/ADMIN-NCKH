doctype html
html
  head
    title Form Nhập Dữ Liệu
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 500px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .img-preview {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-top: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
  body
    .container.mt-5
      h2.text-center.mb-4 Nhập Dữ Liệu

      form(action="/admin/hotspot/create" method="POST")
        .mb-3
          label.form-label(for="x") Tọa độ X:
          input.form-control(type="text", name="x", id="x")

        .mb-3
          label.form-label(for="y") Tọa độ Y:
          input.form-control(type="text", name="y", id="y")

        .mb-3
          label.form-label(for="z") Tọa độ Z:
          input.form-control(type="text", name="z", id="z")

        .mb-3
          label.form-label(for="info") Thông tin:
          textarea.form-control(name="info", id="info", rows="3")

        .mb-3
          label.form-label(for="img") Hình ảnh (URL):
          input.form-control(type="text", name="img", id="img", class="img-hotspots-input")
          img.img-preview.img-hotspots(src="", alt="Preview" class="d-none")

        .mb-3
          label.form-label(style="margin-right:20px") Trạng thái:
          .form-check.form-check-inline
            input.form-check-input(type="radio", name="status", id="active", value="active")
            label.form-check-label(for="active") Hoạt động
          .form-check.form-check-inline
            input.form-check-input(type="radio", name="status", id="inactive", value="inactive")
            label.form-check-label(for="inactive") Dừng hoạt động

        button.btn.btn-primary.mt-3(type="submit") Gửi

    script(src="/admin/js/hotspot.js")
    script(src="/admin/js/script.js")
