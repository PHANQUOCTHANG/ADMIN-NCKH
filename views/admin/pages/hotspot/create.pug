doctype html
html
  head
    title Form Nhập Dữ Liệu
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 500px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      button {
        width: 100%;
      }
  body
    .container.mt-5
      h2.text-center Nhập Dữ Liệu
      form(action="/admin/hotspot/create" method="POST")
        .mb-3
          label.form-label(for="x") Tọa độ X :
          input.form-control(type="text" name="x")
        .mb-3
          label.form-label(for="y") Tọa độ Y :
          input.form-control(type="text" name="y")
        .mb-3
          label.form-label(for="z") Tọa độ Z :
          input.form-control(type="text" name="z")
        .mb-3
          label.form-label(for="info") Thông tin :
          textarea.form-control(name="info" rows="3")
        .mb-3
          label.form-label(for="img") Hình ảnh :
          input.form-control(type="text" name="img")
        //- // Ảnh 
        //- div(class="mb-3" upload-image)
        //-   label(for="img", class="form-label") Ảnh
        //-   input(type="file", name="img", id="img", class="form-control" upload-image-input)
        //-   img(
        //-     src="" 
        //-     upload-image-preview
        //-   ) 
        .mb-3
          label.form-label Trạng thái
          .d-flex
            .form-check.me-3
              input.form-check-input(type="radio" id="active" name="status" value="active")
              label.form-check-label(for="active") Hoạt động
            .form-check
              input.form-check-input(type="radio" id="inactive" name="status" value="inactive")
              label.form-check-label(for="inactive") Dừng Hoạt động
        button.btn.btn-primary(type="submit") Gửi
    script(src="/admin/js/hotspot.js") 